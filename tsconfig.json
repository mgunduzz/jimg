{    

    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",        
        "outDir": "./build",
        "declaration":true       
        
    },
    "include": [
        "src/app/**/*"
    ],
     "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
    
}